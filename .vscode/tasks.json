{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build_mac",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++14",
                "${file}",
                "-g",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.out"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "build_win",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++14",
                "${file}",
                "-g",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "run_mac",
            "type": "shell",
            "command": "${fileDirname}/${fileBasenameNoExtension}.out",
            "args": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "run_win",
            "type": "shell",
            "command": "${fileDirname}/${fileBasenameNoExtension}.exe",
            "args": [],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}